{
  "name": "nodeserver-boilerplate",
  "version": "1.0.0",
  "description": "A FOMO Pay internal boilerplate for Node.js web applications.",
  "main": "dist/index.js",
  "dependencies": {
    "@log4js-node/gelf": "^1.0.2",
    "express": "^4.19.2",
    "log4js": "^6.9.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.4",
    "pg-cursor": "^2.10.4",
    "redis": "^3.1.2",
    "redlock": "^4.2.0",
    "source-map-support": "^0.5.21",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.43",
    "@types/node": "^18.19.28",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "^8.11.4",
    "@types/redis": "^2.8.32",
    "@types/redlock": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run eslint && npm run build-ts",
    "pre-build": "node build/appinfo.js && node build/tsconfig-paths.js && node build/bootstrap.js",
    "serve": "node dist/index.js",
    "build-ts": "rimraf dist/ && npm run pre-build && tsc",
    "eslint": "eslint -c .eslintrc.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug": "npm run build && npm run watch-debug",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "Chenyang Zhu <chenyang.zhu@fomopay.com>",
  "license": "UNLICENSED"
}
