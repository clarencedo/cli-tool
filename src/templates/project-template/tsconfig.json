{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "lib": [
            "es2020"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}